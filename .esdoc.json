{
	"source": "./src",
	"destination": "./docs",
	"index": "./README.md",
	"package": "./package.json",
	"plugins": [
		{
			"name": "@itsjamie/esdoc-standard-plugin",
			"option": {
				"lint": {
					"enable": true
				},
				"coverage": {
					"enable": true
				},
				"brand": {
					"title": "Umbra",
					"logo": "./manual/assets/logo.png"
				},
				"manual": {
					"index": "./README.md",
					"asset": "./manual/assets",
					"files": [
						"./manual/webgl/introduction.md",
						"./manual/webgl/structure.md",
						"./manual/webgl/indices.md",
						"./manual/webgl/transformation.md",
						"./manual/webgl/3d.md",
						"./manual/webgl/textures.md",
						"./manual/webgl/scene.md"
					]
				}
			}
		},
		{
			"name": "@itsjamie/esdoc-ecmascript-proposal-plugin",
			"option": {
				"all": true
			}
		}
	]
}